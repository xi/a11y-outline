{
  "manifest_version": 2,

  "name": "a11y-outline",
  "description": "navigate page outlines easily",
  "version": "1.0.0",
  "icons": {
    "128": "icon-128.png"
  },

  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "A11y Outline"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+7"
      }
    }
  },

  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["outline.js"]
  }],

  "permissions": [
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "outline.css"
  ]
}
